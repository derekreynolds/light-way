{
  "name": "light-way",
  "version": "1.0.0",
  "description": "Smart Home service to activate lights in the hall when Ring motion sensor alerts when it is dark.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && cp -r config/ dist",
    "start": "ts-node ./src/server.ts",
    "dev": "nodemon/bin/nodemon.js --port=5566",
    "debug": "node --inspect dist/",
    "prod": "npm run build && npm run start",
    "test": "jest",
    "testWithCoverage": "jest --coverage"
  },
  "dependencies": {
    "@derekreynolds/logger": "^1.0.1",
    "@types/express": "^4.16.1",
    "@types/node-schedule": "^1.2.3",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.16",
    "config": "^3.0.0",
    "express": "^4.16.4",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.13",
    "minimist": "^1.2.0",
    "moment": "^2.22.2",
    "node-schedule": "^1.3.2",
    "nodemon": "^1.18.8",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "ring-api": "^3.0.7"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/jest": "^23.3.10",
    "@types/minimist": "^1.2.0",
    "jest": "^24.8.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  },
